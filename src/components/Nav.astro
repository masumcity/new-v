---
const menus = [
  {
    name: "Home",
    url: "/",
  },
  {
    name: "Company",
    url: "#passion",
  },
  {
    name: "Products",
    url: "#products",
  },
  {
    name: "Resource",
    url: "#resource",
  },
  {
    name: "Contact US",
    url: "#contactus",
  },
];
---

<section class="py-6 bg-white dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <div
      class="flex items-center justify-between px-6 py-3.5 bg-gray-100 border border-gray-100 rounded-full"
    >
      <div class="w-auto">
        <div class="flex flex-wrap items-center">
          <div class="w-auto">
            <a href="https://valuetop.com.bd">
              <img src="/logo_b.png" alt="Valur-Top" />
            </a>
          </div>
        </div>
      </div>
      <div class="w-auto">
        <div class="flex flex-wrap items-center">
          <div class="w-auto hidden lg:block">
            <ul class="flex items-center justify-center">
              {
                menus.map((menu) => (
                  <li class="mr-9">
                    <a
                      class="inline-block text-sm font-bold text-gray-900 hover:text-gray-700"
                      href={menu.url}
                    >
                      {menu.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
      <div class="w-auto">
        <div class="flex flex-wrap items-center">
          <div class="w-auto hidden lg:block">
            <div class="flex flex-wrap -m-2">
              <div class="w-full md:w-auto p-2 flex">
                <a
                  class="block w-full px-4 py-2.5 text-sm text-center text-white font-bold bg-blue-500 hover:bg-blue-600 focus:ring-4 focus:ring-blue-200 rounded-full"
                  href="#"
                  data-config-id="auto-txt-6-1"
                >
                  Buy Online
                </a>

                <label class="ml-2 flex items-center relative w-max cursor-pointer select-none">
                  <input id="ld" type="checkbox" class="appearance-none transition-colors cursor-pointer w-14 h-7 rounded-full bg-gray-900" />
                  <span class="absolute font-medium text-[8px] uppercase right-1 text-white"> Dark </span>
                  <span class="absolute font-medium text-[8px] uppercase right-8 text-black"> Light </span>
                  <span class="w-7 h-7 right-7 absolute rounded-full transform transition-transform bg-gray-200" />
                </label>
              </div>
            </div>
          </div>
          <div class="w-auto lg:hidden">
            <button class="inline-block" id="mobilebutton">
              <svg
                class="navbar-burger text-blue-500"
                width="45"
                height="45"
                viewBox="0 0 56 56"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                data-config-id="auto-svg-1-1"
              >
                <rect width="56" height="56" rx="28" fill="currentColor"></rect>
                <path
                  d="M37 32H19M37 24H19"
                  stroke="white"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
    <div
      class="hidden navbar-menu fixed top-0 left-0 bottom-0 w-4/6 sm:max-w-xs z-50"
      id="toggle"
    >
      <div
        class="navbar-backdrop fixed inset-0 bg-gray-800 opacity-80"
        id="hidebg"
      >
      </div>
      <nav class="relative z-10 px-9 pt-8 bg-white h-full overflow-y-auto">
        <div class="flex flex-wrap justify-between h-full">
          <div class="w-full">
            <div class="flex items-center justify-between -m-2">
              <div class="w-auto p-2">
                <a class="inline-block" href="#">
                  <img src="/logo_b.png" alt="Value-Top" />
                </a>
              </div>
              <div class="w-auto p-2">
                <button class="inline-block navbar-burger" id="hide">
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                    data-config-id="auto-svg-2-1"
                  >
                    <path
                      d="M6 18L18 6M6 6L18 18"
                      stroke="#111827"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>
          <div class="flex flex-col justify-center py-8 w-full">
            <ul>
              {
                menus.map((menu) => (
                  <li class="mr-9">
                    <a
                      class="inline-block text-sm font-bold text-gray-900 hover:text-gray-700"
                      href={menu.url}
                    >
                      {menu.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
          <div class="flex flex-col justify-end w-full pb-8">
            <div class="flex flex-wrap -m-2">
              <div class="w-full p-2">
                <a
                  class="block w-full px-4 py-2.5 text-sm text-center text-white font-bold bg-blue-500 hover:bg-blue-600 focus:ring-4 focus:ring-blue-200 rounded-full"
                  href="#"
                  data-config-id="auto-txt-12-1">Buy Online</a
                >
              </div>
            </div>
          </div>
        </div>
      </nav>
    </div>
  </div>
</section>
<script>
  const mobilebutton = document.getElementById("mobilebutton");
  const toggle = document.getElementById("toggle");
  mobilebutton.addEventListener("click", () => {
    toggle.classList.toggle("hidden");
  });

  const hide = document.getElementById("hide");
  hide.addEventListener("click", () => {
    toggle.classList.toggle("hidden");
  });

  const hidebg = document.getElementById("hidebg");
  hidebg.addEventListener("click", () => {
    toggle.classList.toggle("hidden");
  });

  const ld = document.getElementById("ld");
  ld.addEventListener("click", () => {
    var element = document.documentElement;
    element.classList.toggle("dark");
  });
</script>

<style>
  input:checked {
    background-color: #fff; /* bg-green-500 */
  }

  input:checked ~ span:last-child {
    --tw-translate-x: 1.75rem; /* translate-x-7 */
  }
</style>